<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a98497.mypark.PayActivity">
    <TextView
        android:gravity="center"
        android:id="@+id/text"
        android:text="请扫码支付"
        android:layout_centerHorizontal="true"
        android:layout_width="900px"
        android:layout_height="200px"
        android:textSize="50dp"
        android:inputType="number"
        android:textColor="#5080e6"
        android:maxLength="10"
        />
    <TextView
        android:gravity="center"
        android:id="@+id/info"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:textSize="30dp"
        android:inputType="number"
        android:textColor="#5080e6"
        />
    <ImageView
        android:layout_below="@+id/info"
        android:id="@+id/payCode"
        android:gravity="center"
        android:background="@drawable/hwy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btnSubmit"
        android:layout_below="@+id/payCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_div"
        android:text="提交"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btnBack"
        android:layout_below="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_div"
        android:text="点击返回"/>
</RelativeLayout>
