<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        style="@style/numberKeyBoard"
        android:id="@+id/numberKeyboard_5"
        android:layout_width="@dimen/numberkeyboard_width"
        android:layout_height="@dimen/numberkeyboard_height"
        android:layout_centerInParent="true"
        android:text="5" />

    <Button
        style="@style/numberKeyBoard"
        android:id="@+id/numberKeyboard_4"
        android:layout_width="@dimen/numberkeyboard_width"
        android:layout_height="@dimen/numberkeyboard_height"
        android:layout_alignBottom="@+id/numberKeyboard_5"
        android:layout_alignTop="@+id/numberKeyboard_5"
        android:layout_toLeftOf="@+id/numberKeyboard_5"
        android:text="4" />

    <Button
        style="@style/numberKeyBoard"
        android:id="@+id/numberKeyboard_6"
        android:layout_width="@dimen/numberkeyboard_width"
        android:layout_height="@dimen/numberkeyboard_height"
        android:layout_alignBottom="@+id/numberKeyboard_5"
        android:layout_alignTop="@+id/numberKeyboard_5"
        android:layout_toRightOf="@+id/numberKeyboard_5"
        android:text="6" />

    <Button
        style="@style/numberKeyBoard"
        android:id="@+id/numberKeyboard_2"
        android:layout_width="@dimen/numberkeyboard_width"
        android:layout_height="@dimen/numberkeyboard_height"
        android:layout_above="@+id/numberKeyboard_5"
        android:layout_alignLeft="@+id/numberKeyboard_5"
        android:layout_alignRight="@+id/numberKeyboard_5"
        android:text="2" />

    <Button
        style="@style/numberKeyBoard"
        android:id="@+id/numberKeyboard_1"
        android:layout_width="@dimen/numberkeyboard_width"
        android:layout_height="@dimen/numberkeyboard_height"
        android:layout_alignBottom="@+id/numberKeyboard_2"
        android:layout_alignTop="@+id/numberKeyboard_2"
        android:layout_toLeftOf="@+id/numberKeyboard_2"
        android:text="1" />

    <Button
        style="@style/numberKeyBoard"
        android:id="@+id/numberKeyboard_3"
        android:layout_width="@dimen/numberkeyboard_width"
        android:layout_height="@dimen/numberkeyboard_height"
        android:layout_alignBottom="@+id/numberKeyboard_2"
        android:layout_alignTop="@+id/numberKeyboard_2"
        android:layout_toRightOf="@+id/numberKeyboard_2"
        android:text="3" />

    <Button
        style="@style/numberKeyBoard"
        android:id="@+id/numberKeyboard_8"
        android:layout_width="@dimen/numberkeyboard_width"
        android:layout_height="@dimen/numberkeyboard_height"
        android:layout_alignLeft="@+id/numberKeyboard_5"
        android:layout_alignRight="@+id/numberKeyboard_5"
        android:layout_below="@+id/numberKeyboard_5"
        android:text="8" />

    <Button
        style="@style/numberKeyBoard"
        android:id="@+id/numberKeyboard_7"
        android:layout_width="@dimen/numberkeyboard_width"
        android:layout_height="@dimen/numberkeyboard_height"
        android:layout_alignBottom="@+id/numberKeyboard_8"
        android:layout_alignTop="@+id/numberKeyboard_8"
        android:layout_toLeftOf="@+id/numberKeyboard_8"
        android:text="7" />

    <Button
        style="@style/numberKeyBoard"
        android:id="@+id/numberKeyboard_9"
        android:layout_width="@dimen/numberkeyboard_width"
        android:layout_height="@dimen/numberkeyboard_height"
        android:layout_alignBottom="@+id/numberKeyboard_8"
        android:layout_alignTop="@+id/numberKeyboard_8"
        android:layout_toRightOf="@+id/numberKeyboard_8"
        android:text="9" />
    <Button
        style="@style/numberKeyBoard"
        android:id="@+id/numberKeyboard_hint"
        android:layout_width="@dimen/numberkeyboard_width"
        android:layout_height="@dimen/numberkeyboard_height"
        android:layout_alignLeft="@+id/numberKeyboard_7"
        android:layout_alignRight="@+id/numberKeyboard_8"
        android:layout_below="@+id/numberKeyboard_8"
        android:text="隐藏" />
    <Button
        style="@style/numberKeyBoard"
        android:id="@+id/numberKeyboard_0"
        android:layout_width="@dimen/numberkeyboard_width"
        android:layout_height="@dimen/numberkeyboard_height"
        android:layout_alignTop="@+id/numberKeyboard_hint"
        android:layout_alignBottom="@+id/numberKeyboard_hint"
        android:layout_toRightOf="@+id/numberKeyboard_hint"
        android:text="0" />

</RelativeLayout>